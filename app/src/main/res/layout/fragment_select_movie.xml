<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context="com.finalandroidproject.quickmovie.Fragments.SelectMovieFragment">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="הזמנה לסרט שם הסרט"
        android:textSize="60px"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="בחר סרט:"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/lstMovies" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:inputType="textMultiLine"
            android:id="@+id/selectionMovieDescription"
            android:minLines="6"
            android:editable="false"
            android:gravity="top|right"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"/>
        <ImageView
            android:id="@+id/selectionMovieImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="בחר חברים:"/>
    <ListView android:id="@+id/selectionMovieFriends"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="הזמן"
        android:id="@+id/btnCreateInvitation"/>
</LinearLayout>
